- content_for :title do
  The Hackety Blog!

- content_for :sidebar do
  = render :partial => "shared/ask"
  = render :partial => "shared/lessons"

- @posts.each do |post|
  .post.teaser
    %h2.title= link_to post.title, blog_path(post)
    
    .created_at
      = post.created_at.strftime("Posted %B %d, %Y at %l:%M %p")

    .content
      :markdown
        #{post.content}
    
